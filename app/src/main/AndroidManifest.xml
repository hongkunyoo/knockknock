<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.handong.design.knockknock" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/kapp_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:replace="android:label, theme, icon" >
        <activity
            android:name=".activity.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activity.TestActivity"
            android:label="@string/title_activity_test" >
        </activity>
        <activity
            android:name=".activity.TabActivity"
            android:label="@string/title_activity_tab" >
        </activity>
        <activity
            android:name=".activity.DrawerActivity"
            android:label="@string/title_activity_drawer" >
        </activity>
        <activity
            android:name=".activity.TestActivity2"
            android:label="@string/title_activity_test_activity2" >
        </activity>
        <activity
            android:name=".activity.TestActivity3"
            android:label="@string/title_activity_test_activity3" >
        </activity>
        <activity
            android:name=".activity.PresetTabActivity"
            android:label="@string/title_activity_preset_tab" >
        </activity>
        <activity
            android:name=".activity.HouseWorkAddActivity"
            android:label="@string/title_activity_house_work_add"
            android:parentActivityName=".activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.handong.design.knockknock.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.MoneyAddActivity"
            android:label="@string/title_activity_money_add"
            android:parentActivityName=".activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.handong.design.knockknock.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.MenuActivity"
            android:label="@string/title_activity_menu"
            android:parentActivityName=".activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.handong.design.knockknock.activity.MainActivity" />
        </activity>
    </application>

</manifest>
